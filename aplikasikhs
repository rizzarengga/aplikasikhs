function bobotNilai(nilai) {
    switch (nilai) {
        case "A": return 4;
        case "B": return 3;
        case "C": return 2;
        case "D": return 1;
        default: return 0;
    }
}

let output = "";

mahasiswa.forEach(mhs => {
    let totalSKS = 0;
    let totalBobot = 0;

    output += `<h2>${mhs.nama} (NIM: ${mhs.nim})</h2>`;
    output += `
        <table>
            <tr>
                <th>Mata Kuliah</th>
                <th>SKS</th>
                <th>Nilai</th>
                <th>Bobot</th>
            </tr>
    `;

    mhs.nilai.forEach(n => {
        let bobot = bobotNilai(n.nilai);
        totalSKS += n.sks;
        totalBobot += n.sks * bobot;

        output += `
            <tr>
                <td>${n.matkul}</td>
                <td>${n.sks}</td>
                <td>${n.nilai}</td>
                <td>${bobot}</td>
            </tr>
        `;
    });

    let ipk = (totalBobot / totalSKS).toFixed(2);

    output += `
        <tr>
            <th colspan="3">IPK</th>
            <th>${ipk}</th>
        </tr>
        </table>
    `;
});

document.getElementById("khs").innerHTML = output;
